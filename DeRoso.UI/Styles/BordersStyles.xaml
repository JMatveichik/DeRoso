<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DeRoso.UI.Styles">

    <SolidColorBrush x:Key="BordersBrush" Color="{StaticResource MahApps.Colors.Accent2}" />
    <SolidColorBrush x:Key="BordersSuccsessBrush" Color="Green" />

    <Style x:Key="BorderUnderline" TargetType="Border">

        <Setter Property="BorderThickness"
                Value="0,0,0,1" />

        <Setter Property="BorderBrush"
                Value="{StaticResource BordersBrush}" />
        
        <Setter Property="Margin" Value="10, 10, 20, 0"/>
    </Style>

    <Style x:Key="BorderBox" TargetType="Border" BasedOn="{StaticResource BorderUnderline}">

        <Setter Property="BorderThickness"
                Value="1,1,1,1" />
        
        <Setter Property="CornerRadius" Value="3"/>

        <Setter Property="Margin" Value="10"/>
    </Style>

    <Style x:Key="BorderSuccsessBox" TargetType="Border" BasedOn="{StaticResource BorderBox}">

        <Setter Property="BorderBrush"
                Value="{StaticResource BordersSuccsessBrush}" />
        
    </Style>

</ResourceDictionary>