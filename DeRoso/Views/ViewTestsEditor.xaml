<UserControl x:Class="DeRoso.Views.ViewTestsEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeRoso.Views"
             xmlns:ctrl="clr-namespace:DeRoso.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="РЕДАКТИРОВАНИЕ ТЕСТОВ"
                   Grid.ColumnSpan="3"
                   Style="{StaticResource PageTitleStyle}">            
        </TextBlock>

        <Border Grid.Column="0"
                 Grid.Row="1"
                 Style="{StaticResource BorderBox}">
        <Grid>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Column="0"
                 Grid.Row="0"
                 Style="{StaticResource BorderUnderline}">
                    <TextBlock 
                 Style="{StaticResource HeaderStyle}"
                       Text="СЕКЦИЯ"
                       Margin="5, 5">


                    </TextBlock>
                </Border>


                <ComboBox Grid.Column="0" MinHeight="50"
                 Grid.Row="1"
                 Margin="10,5"
                 ItemsSource="{Binding Sections}"                         
                     SelectedItem ="{Binding SelectedSection, Mode=TwoWay}"
                     ItemTemplate="{StaticResource DescribedListBoxItemTemplate}">

                </ComboBox>

                <Border Grid.Column="0"
                 Grid.Row="2"
                 Style="{StaticResource BorderUnderline}">
                    <TextBlock 
                 Style="{StaticResource HeaderStyle}"
                       Text="РАЗДЕЛ"
                       Margin="5, 5">


                    </TextBlock>
                </Border>

                <ComboBox Grid.Column="0" MinHeight="50"
                 Grid.Row="3"
                 Margin="10,5"
                     ItemsSource="{Binding SelectedSection.Groups}"
                     SelectedItem ="{Binding SelectedGroup, Mode=TwoWay}"
                     ItemTemplate="{StaticResource DescribedListBoxItemTemplate}">
                </ComboBox>

                <!--
                <ListBox Grid.Column="0"
                 Grid.Row="1"
                 Margin="10,5"
                 ItemsSource="{Binding Sections}"                         
                     SelectedItem ="{Binding SelectedSection, Mode=TwoWay}"
                     ItemTemplate="{StaticResource DescribedListBoxItemTemplate}">
                    
                </ListBox>
            -->
        </Grid>

        </Border>

