        <Border Grid.Column="1"
                 Grid.Row="1"
                Style="{StaticResource BorderBox}">
            <Grid  >

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Border Grid.Column="0"
                 Grid.Row="0"
                 Style="{StaticResource BorderUnderline}">
                    <TextBlock 
                 Style="{StaticResource HeaderStyle}"
                       Text="ТЕСТЫ"
                       Margin="5, 5">


                    </TextBlock>
                </Border>

                <ListBox Grid.Column="0"
                 Grid.Row="1"
                 SelectedItem="{Binding SelectedTest}"
                 Margin="10,5" ItemsSource="{Binding SelectedGroup.Tests}"
                 ItemTemplate="{StaticResource DescribedListBoxItemTemplate}">

                </ListBox>
            </Grid>
        </Border>

        <Border Grid.Column="2"
                 Grid.Row="1"
                Style="{StaticResource BorderBox}">
            <Grid  >

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Border Grid.Column="0"
                 Grid.Row="0"
                 Style="{StaticResource BorderUnderline}">
                    <TextBlock 
                 Style="{StaticResource HeaderStyle}"
                       Text="ДОСТУПНЫЕ ПРЕПАРАТЫ"
                       Margin="5, 5">


                    </TextBlock>
                </Border>

                <ListBox Grid.Column="0"
                 Grid.Row="1"
                 SelectedItem="{Binding SelectedDrug, Mode=TwoWay}"
                 Margin="10,5" ItemsSource="{Binding Drugs}"
                 ItemTemplate="{StaticResource DrugListBoxItemTemplate}" PreviewMouseLeftButtonDown="OnDrugListBoxPreviewMouseLeftButtonDown"
                         >
                    

                </ListBox>
            </Grid>
        </Border>

        <TextBlock Text="{Binding CurrentTestPath}"
                   Grid.Row="2"
                   Grid.ColumnSpan="3"
                   Style="{StaticResource PageTitleStyle}">
        </TextBlock>

        <ctrl:TestEditor 
            DataContext="{Binding SelectedTest}" Grid.Row="3" Grid.Column="0">            
        </ctrl:TestEditor>

        <ctrl:TestDrugsListContainer
            DataContext="{Binding}" Grid.Row="3" Grid.Column="1">
        </ctrl:TestDrugsListContainer>

        <ctrl:DrugEditor
            DataContext="{Binding SelectedDrug}" Grid.Row="3" Grid.Column="2">
        </ctrl:DrugEditor>

    </Grid>
    
</UserControl>
