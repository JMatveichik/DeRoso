        <Border Grid.Column="1"
                 Grid.Row="1"
                Style="{StaticResource BorderBox}">
            <Grid  >

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Border Grid.Column="0"
                 Grid.Row="0"
                 Style="{StaticResource BorderUnderline}">
                    <TextBlock 
                 Style="{StaticResource HeaderStyle}"
                       Text="ТЕСТЫ">


                    </TextBlock>
                </Border>

                <ListBox Grid.Column="0"
                         SelectedIndex="0"
                         IsSynchronizedWithCurrentItem="True"
                 Grid.Row="1"
                 SelectedItem="{Binding SelectedTest}"
                 Margin="10,5" ItemsSource="{Binding SelectedGroup.Tests}"
                 ItemTemplateSelector="{StaticResource TestListBoxItemTemplateSelector}">

                </ListBox>
            </Grid>
        </Border>

        <Border Grid.Column="2"
                 Grid.Row="1"
                Style="{StaticResource BorderBox}">
            <Grid  >

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Border Grid.Column="0"
                 Grid.Row="0"
                 Style="{StaticResource BorderUnderline}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0"
                        Style="{StaticResource HeaderStyle}"
                        Text="ДОСТУПНЫЕ ПРЕПАРАТЫ"> 
                    </TextBlock>

                        <TextBlock Grid.Column="1" 
                            Style="{StaticResource ValueTitleStyle}"
                            Text="Адрес" Margin="20, 0, 5, 0"/>

                        <TextBox Grid.Column="2"
                            Width="50"
                            Style="{StaticResource ValueInputTextBoxStyle}"
                            Text="{Binding DrugMinimalAddress, Mode=TwoWay,
                                            NotifyOnSourceUpdated=True,
                                            UpdateSourceTrigger=PropertyChanged}" />

                    </Grid>
                </Border>

                <ListBox Grid.Column="0"
                 Grid.Row="1"
                 SelectedItem="{Binding SelectedDrug, Mode=TwoWay}"
                 Margin="10,5" ItemsSource="{Binding FilteredDrugs}"
                 ItemTemplate="{StaticResource DrugListBoxItemTemplate}" 
                         PreviewMouseLeftButtonDown="OnDrugListBoxPreviewMouseLeftButtonDown"
                         >
                    

                </ListBox>
            </Grid>
        </Border>

        <TextBlock Text="{Binding CurrentTestPath}"
                   Grid.Row="2"
                   Grid.ColumnSpan="3"
                   Style="{StaticResource PageTitleStyle}">
        </TextBlock>

        <ctrl:TestEditor 
            DataContext="{Binding SelectedTest}" Grid.Row="3" Grid.Column="0">            
        </ctrl:TestEditor>

        <ctrl:TestDrugsListContainer
            DataContext="{Binding}" Grid.Row="3" Grid.Column="1">
        </ctrl:TestDrugsListContainer>

        <ctrl:DrugEditor
            DataContext="{Binding SelectedDrug}" Grid.Row="3" Grid.Column="2">
        </ctrl:DrugEditor>

    </Grid>
    
</UserControl>
